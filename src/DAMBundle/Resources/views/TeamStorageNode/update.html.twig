{% extends 'OroUIBundle:actions:update.html.twig' %}

{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}


{% set formAction =
     path('kiboko_dam_index')
%}

{% set node = form.vars.value %}

{% if node.uuid and node.id %}
    {% set formAction = path('kiboko_dam_storage_update', { 'uuid': node.uuid }) %}
{% else %}
    {% if node.uuid %}
        {% set formAction = path('kiboko_dam_storage_create') %}
    {% endif %}
{% endif %}

{% block navButtons %}
    {{ UI.cancelButton(path('kiboko_dam_index')) }}

    {% set html = UI.saveAndCloseButton({'route': 'kiboko_dam_index'}) %}
    {% if resource_granted('kiboko_dam_storage_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'kiboko_project_create'
        }) %}
    {% endif %}
    {% if form.vars.value.id or resource_granted('kiboko_dam_storage_update') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'kiboko_dam_storage_update',
            'params': {'uuid': '$uuid'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}

{% endblock navButtons %}

{% block pageHeader %}
    {% if node.uuid %}
        {% set breadcrumbs = {
            'entity': node,
            'indexPath': path('kiboko_dam_index'),
            'indexLabel': 'Team Storage',
            'entityTitle': node.names|localized_value
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({ '%entityName%': 'Team Storage' }) %}
        {{ include('OroUIBundle::page_title_block.html.twig', { title: title }) }}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'document-node-edit' %}
    {% set dataBlocks = [
        {
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.names),
                    form_row(form.slugs),
                ]}
            ]
        },
        {
            'title': 'Backend'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.integration),
                ]
            }]
        },
        {
            'title': 'Additional'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_rest(form),
                ]
            }]
        },
    ] %}

    {% set data = {
        'formErrors': form_errors(form) ? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}

    {{ parent() }}
{% endblock content_data %}
