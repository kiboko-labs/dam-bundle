{% extends 'OroUIBundle:actions:update.html.twig' %}

{% form_theme form with [ 'OroFormBundle:Form:fields.html.twig', 'KibokoDAMBundle:Form:fields.html.twig' ] %}

{% set node = form.vars.value %}

{% if node.id %}
    {% set formAction = path('kiboko_dam_node_update', { 'node': node.uuid }) %}
{% else %}
        {% set formAction = path('kiboko_dam_node_create', { 'parent': node.uuid, 'root': node.root.uuid }) %}
{% endif %}

{% block navButtons %}

    {{ UI.cancelButton(path('kiboko_dam_node_browse', { root: node.root.uuid, node: node.uuid})) }}

    {% set html = UI.saveAndCloseButton({
        'route': 'kiboko_dam_root_browse',
        'params': { root: root.uuid }
    }) %}

    {{ UI.dropdownSaveButton({'html': html}) }}

{% endblock navButtons %}

{% block pageHeader %}
    {% if node.uuid %}
        {% set breadcrumbs = {
            'entity': node,
            'indexPath': path('kiboko_dam_index'),
            'indexLabel': 'kiboko.dam.documentnode.entity_label'|trans,
            'entityTitle': node.names|localized_value
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({ '%entityName%': 'kiboko.dam.documentnode.entity_label'|trans }) %}
        {{ include('OroUIBundle::page_title_block.html.twig', { title: title }) }}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'document-node-edit' %}
    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_row(form.names),
                form_row(form.slugs),
                form_rest(form),
            ]
        }]
    }] %}

    {% set data = {
        'formErrors': form_errors(form) ? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}

    {{ parent() }}
{% endblock content_data %}
